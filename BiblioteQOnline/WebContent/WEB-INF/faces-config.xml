<?xml version="1.0" encoding="UTF-8"?>

<faces-config
    xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
	version="2.0">
	<navigation-rule>
		<from-view-id>/index.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>login</from-outcome>
			<to-view-id>/restricted/index.xhtml</to-view-id>
			<redirect/>
		</navigation-case>
		<navigation-case>
			<from-outcome>search</from-outcome>
			<to-view-id>/unrestricted/searchresults.xhtml</to-view-id>
			<redirect/>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>/unrestricted/register.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>search</from-outcome>
			<to-view-id>/unrestricted/searchresults.xhtml</to-view-id>
			<redirect/>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>/unrestricted/searchresults.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>search</from-outcome>
			<to-view-id>/unrestricted/searchresults.xhtml</to-view-id>
			<redirect/>
		</navigation-case>
		<navigation-case>
			<from-outcome>itemdetails</from-outcome>
			<to-view-id>/unrestricted/itemdetails.xhtml</to-view-id>
			<redirect/>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>/unrestricted/itemdetails.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>search</from-outcome>
			<to-view-id>/unrestricted/searchresults.xhtml</to-view-id>
			<redirect/>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>*</from-view-id>
		<navigation-case>
			<from-outcome>logout</from-outcome>
			<to-view-id>/logout/</to-view-id>
			<redirect/>
		</navigation-case>
		<navigation-case>
			<from-outcome>register</from-outcome>
			<to-view-id>/unrestricted/register.xhtml</to-view-id>
			<redirect/>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>/restricted/*</from-view-id>
		<navigation-case>
			<from-outcome>admin</from-outcome>
			<to-view-id>/admin/index.xhtml</to-view-id>
			<redirect/>
		</navigation-case>
		<navigation-case>
			<from-outcome>update</from-outcome>
			<to-view-id>/restricted/index.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>/admin/*</from-view-id>
		<navigation-case>
			<from-outcome>restrictedindex</from-outcome>
			<to-view-id>/restricted/index.xhtml</to-view-id>
			<redirect/>
		</navigation-case>
	</navigation-rule>
	<validator>
		<validator-id>IntegerValidator</validator-id>
		<validator-class>org.biblioteq.web.validators.IntegerValidator</validator-class>
	</validator>
	<validator>
		<validator-id>PhoneValidator</validator-id>
		<validator-class>org.biblioteq.web.validators.PhoneValidator</validator-class>
	</validator>
	<validator>
		<validator-id>ZipValidator</validator-id>
		<validator-class>org.biblioteq.web.validators.ZipValidator</validator-class>
	</validator>
	<converter>
		<converter-id>FloatConverter</converter-id>
		<converter-class>org.biblioteq.web.converters.FloatConverter</converter-class>
	</converter>
</faces-config>